{
  "version": 2,
  "builds": [
    {
      "src": "backend/flask_app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "includeFiles": "backend/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/flask_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/flask_app.py"
    }
  ]
}